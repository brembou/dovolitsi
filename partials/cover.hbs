                            <script>
                                (function () {
                                    const phrases = ["zpomalit", "rozkv√©st", "riskovat", "z√°≈ôit", "naslouchat", "tanƒçit", "peƒçovat", "odpustit", "d√Ωchat", "sn√≠t"];
                                    const el = document.getElementById("typer-text");
                                    if (!el) return;

                                    const reduce = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
                                    if (reduce) {
                                        el.textContent = phrases[0];
                                        return;
                                    }

                                    const typeMs = 70, delMs = 40, holdMs = 900, preHoldMs = 220;

                                    let p = 0, i = 0, del = false, loops = 0, stopping = false, finalIndex = null;

                                    // üëá helper: kdy≈æ je d√©lka 0, nech v elementu NBSP, aby v√Ω≈°ka/≈ô√°dek z≈Østal
                                    const NBSP = "\u00A0";

                                    function setTextLen(n, full) {
                                        el.textContent = n > 0 ? full.slice(0, n) : NBSP;
                                    }

                                    // inicializace ‚Äì a≈• tam nen√≠ pr√°zdno
                                    el.textContent = NBSP;

                                    function tick() {
                                        const full = stopping ? phrases[finalIndex] : phrases[p];

                                        if (!del) {
                                            i++;
                                            setTextLen(i, full);
                                            if (i === full.length) {
                                                if (stopping) {
                                                    return;
                                                }
                                                setTimeout(() => {
                                                    del = true;
                                                    setTimeout(tick, preHoldMs);
                                                }, holdMs);
                                            } else {
                                                setTimeout(tick, typeMs);
                                            }
                                        } else {
                                            i--;
                                            setTextLen(i, full);
                                            if (i === 0) {
                                                del = false;
                                                p++;
                                                if (p === phrases.length) {
                                                    loops++;
                                                    p = 0;
                                                    if (loops >= 1) {
                                                        finalIndex = Math.floor(Math.random() * phrases.length);
                                                        stopping = true;
                                                    }
                                                }
                                                setTimeout(tick, typeMs);
                                            } else {
                                                setTimeout(tick, delMs);
                                            }
                                        }
                                    }

                                    setTimeout(tick, 300);
                                })();
                            </script>

