                                        min-width: calc(var(--longest) * 1ch);
                                    }

                                    .typer-caret {
                                        position: absolute;
                                        top: 0;
                                        left: calc(var(--chars) * 1ch);
                                        width: 1px;
                                        height: 1.1em;
                                        background: currentColor;
                                        opacity: .7;
                                        animation: caret-blink 1s steps(1, end) infinite;
                                    }

                                    @keyframes caret-blink {
                                        50% {
                                            opacity: 0
                                        }
                                    }

                                    .typer-caret.is-hidden {
