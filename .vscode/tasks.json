{
    "version": "2.0.0",
    "tasks": [
        // 1. GHOST SERVER
        {
            "label": "Start Ghost Server (Run)",
            "type": "shell",
            "command": "bash -c \"fuser -k 2368/tcp || true; cd /home/brembou/projects/ghost-blog && /home/brembou/.local/bin/mise x -- ghost start && /home/brembou/.local/bin/mise x -- ghost log -f\"",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "Ghost"
            },
            "problemMatcher": {
                "owner": "ghost",
                "pattern": { "regexp": "^(.*)$", "message": 1 },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting Ghost",
                    "endsPattern": "Ghost is running"
                }
            }
        },

        // 2. THEME WATCHER
        {
            "label": "Start Theme Watcher",
            "type": "shell",
            "command": "bash -c \"/home/brembou/.local/bin/mise x -- npm run dev\"",
            "isBackground": true,
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "Ghost"
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": [{ "regexp": ".*", "file": 1, "location": 2, "message": 3 }],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Watching for changes|Built"
                }
            }
        },

        // 3. SMARTGIT (S p≈ô√≠kazem disown)
        {
            "label": "Open SmartGit",
            "type": "shell",
            "command": "zsh",
            "args": [
                "-i",
                "-c",
                "smartgit; disown"
            ],
            "presentation": { "reveal": "silent", "panel": "shared" },
            "problemMatcher": []
        },

        // 4. OPEN BROWSER
        {
            "label": "Open Browser",
            "type": "shell",
            "command": "bash -c \"sleep 8 && wslview http://localhost:2368\"",
            "presentation": { "reveal": "silent", "panel": "shared" },
            "problemMatcher": []
        },

        // üöÄ HLAVN√ç SPOU≈†Tƒöƒå
        {
            "label": "üöÄ START DEV ENVIRONMENT",
            "dependsOn": [
                "Start Ghost Server (Run)",
                "Start Theme Watcher",
                "Open SmartGit",
                "Open Browser"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },

        // üõë STOP
        {
            "label": "üõë STOP ALL",
            "type": "shell",
            "command": "bash -c \"cd /home/brembou/projects/ghost-blog && /home/brembou/.local/bin/mise x -- ghost stop\"",
            "problemMatcher": []
        }
    ]
}