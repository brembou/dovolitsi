{
    "version": "2.0.0",
    "tasks": [
        // 1. 칔kol pro spu코t캩n칤 Ghost Serveru
        {
            "label": "Start Ghost Server (Run)",
            "type": "shell",
            // OPRAVA: Nahrazeno '~' za '/home/brembou'
            "command": "bash -c \"cd /home/brembou/projects/ghost-blog && /home/brembou/.local/bin/mise x -- ghost restart && /home/brembou/.local/bin/mise x -- ghost log -f\"",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "Ghost"
            },
            "problemMatcher": {
                "owner": "ghost",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^.*Running.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Restarting Ghost",
                    "endsPattern": "Ghost is running"
                }
            }
        },
        // 2. 칔kol pro spu코t캩n칤 Kompil치toru 코ablony (Watcher)
        {
            "label": "Start Theme Watcher",
            "type": "shell",
            // OPRAVA:
            // 1. Pou쬴to 'bash -c' pro jistotu
            // 2. Absolutn칤 cesta k 'mise' (/home/brembou/...)
            // 3. Spou코t칤 se v aktu치ln칤m adres치콏i projektu (proto쬰 tento soubor je v .vscode uvnit콏 코ablony)
            "command": "bash -c \"/home/brembou/.local/bin/mise x -- npm run dev\"",
            "isBackground": true,
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "Ghost"
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": [
                    {
                        "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "code": 4,
                        "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Watching for changes|Built"
                }
            }
        },
        // 3. Hlavn칤 spou코t캩캜
        {
            "label": "游 START DEV ENVIRONMENT",
            "dependsOn": [
                "Start Ghost Server (Run)",
                "Start Theme Watcher"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        // 4. Stop Task
        {
            "label": "游띔 STOP ALL",
            "type": "shell",
            "command": "bash -c \"cd /home/brembou/projects/ghost-blog && /home/brembou/.local/bin/mise x -- ghost stop\"",
            "problemMatcher": []
        }
    ]
}